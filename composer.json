{
    "name": "szemul/database",
    "description": "Simple wrapper for PDO to make it easier to use and easier to mock",
    "license": "MIT",
    "minimum-stability": "stable",
    "repositories": {
        "FIXME-remove-after-publishing-debugger-to-packagist": {
            "type": "github",
            "url": "https://github.com/szemul/debugger.git"
        },
        "FIXME-remove-after-publishing-not-set-value-to-packagist": {
            "type": "github",
            "url": "https://github.com/szemul/not-set-value.git"
        }
    },
    "require": {
        "php": "^8.0",
        "ext-pdo": "*",
        "szemul/not-set-value": "dev-main"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0.0",
        "jetbrains/phpstorm-attributes": "^1.0",
        "mockery/mockery": "^1.0",
        "nesbot/carbon": "^2.0",
        "phpstan/phpstan": "^0.12.80",
        "phpunit/phpunit": "^9.5.5",
        "szemul/debugger": "dev-main"
    },
    "suggest": {
        "nesbot/carbon": "Extends the DateTime classes",
        "szemul/debugger": "Allows debugging and tracing the database queries"
    },
    "autoload": {
        "psr-4": {
            "Szemul\\Database\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Szemul\\Database\\Test\\": "tests"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
